@import url('https://fonts.googleapis.com/css?family=Roboto');

html,body
  position relative
  padding 0
  margin 0
  height 100%
  width 100%    
  height 100vh
  overflow-x hidden
  -webkit-overflow-scrolling touch

body
  font-family 'Roboto', sans-serif
  font-weight 400
  padding 0
  margin 0
  -webkit-perspective 1000
  -webkit-touch-callout none
  -moz-osx-font-smoothing grayscale
  user-select none
  color white
  background-color black  

*
  box-sizing border-box
  -webkit-font-smoothing antialiased
  -webkit-backface-visibility hidden
  
.app-wrap
  position absolute
  margin auto
  display flex
  flex-direction column
  text-align center  
  width 60%
  height auto
  min-width 450px
  min-height 100%
  top 0
  left 0
  right 0
  background-color black
  border 1px solid #58D0F2
  border-top none
  nav
    border-bottom 1px solid #58D0F2
    padding 20px 0 10px 0
  .err-message
    position absolute
    left 0
    right 0
    top 3px    
    margin auto
    font-size 12px
    color red
  .authenticated-wrap
    position relative
    display flex
    flex-direction row
    padding 10px 20px 50px 0
    font-size 13px
    height 50px
    background-color black
    float right
    > p
      margin-top 6px
      padding-right 10px
    > button
      width 100px
      height 30px
      border 1px solid #58D0F2
      color white
      background-color black
      cursor pointer      
  .authenticate-wrap, .message-wrap
    position relative
    width 100%
    height auto
    background-color black
    > h1
      color white
      font-size 13px
      font-weight 300
      margin 0
    .auth-form
      position relative
      display flex
      flex-direction row
      align-items center
      justify-content center
      padding-bottom 10px
      > input
        width 150px
        height 25px
        background-color black
        outline 0
        color white
        border 1px solid #58D0F2
        margin-top 5px
        padding 5px
      > button
        width 120px
        height 25px
        margin-top 5px
        background-color black
        color white
        font-weight 400
        font-size 14px
        outline 0  
        border 1px solid #58D0F2
        cursor pointer
    .auth-toggle
      margin 0
      font-size 12px
      color #FFCD58
      cursor pointer
    .message-form
      position relative
      display flex
      flex-direction column
      align-items center
      background-color black
      width auto
      height auto
      margin-top 25px 
      > textarea
        color white
        width 40%
        height auto
        min-height 50px
        background-color black
        border 1px solid #58D0F2
        outline 0
      > button
        margin 10px 0 20px 0
        width 100px
        height 30px
        border 1px solid #58D0F2
        color white
        background-color black        
        cursor pointer
      > p
        color green
  .messages-wrap
    position relative
    margin 0 auto
    width 60%
    min-width 340px
    height auto
    padding 15px 10px
    font-size 13px
    color white
    .message-container
      position relative
      width 100%
      margin 20px auto 0 auto
      background-color black
      border 1px solid #58D0F2
      .message-header
        position relative
        display flex
        align-items center
        padding-left 10px
        height 30px
        width 100%
        border-bottom 1px solid #58D0F2
        > p
          margin 0
          text-align left
      .message-body
        display flex
        padding 0 10px
        word-wrap break-word
        > p
          margin 0
    .comment-line-wrap
      position relative
      display flex
      flex-direction row
      justify-content center
      width 100%
      height auto
      .comment-line
        position relative
        margin-right 0
        width 1px
        height 20px
        background-color white
    .comment-wrap
      position relative
      margin 0 auto
      display: flex;
      padding: 10px;
      background-color black
      border 1px solid darken(white, 50%)
      color white
      width 90%
      height auto
      min-height 30px
      text-align left
      margin-right 0
      p
        margin 0
        span
          color #FFC89A
  .reply-wrap
    position relative
    margin 0 auto
    width 40%
    min-width 340px
    height auto
    padding 5px 0 0 0
    font-size 13px
    color white
    .reply-form
      display flex
      flex-direction row
      align-items center
      justify-content center
      > textarea
        color white
        width 60%
        height auto
        min-height 30px
        background-color black
        border 1px solid #58D0F2
        border-bottom 0
        outline 0
      > button
        margin 0
        width 100px
        height 30px
        border 1px solid #58D0F2
        color white
        background-color black
        cursor pointer